<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zrh.dao.LocationDao">
    <select id="getLocationById" resultType="com.zrh.pojo.Location">
        select * from location where locationid = #{locationid}
    </select>

    <select id="getAllLocations" resultType="com.zrh.pojo.Location">
        select * from location
    </select>
</mapper>